<% if tickets.size > 0 %>
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Assignee</th>
      <th>Status</th>
      <th>Tags</th>
      <th></th>
    </tr>
    <% tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.name, ticket_path(ticket) %></td>
        <td></td>
        <td><%= ticket.status %></td>
        <td><%= list_tags(ticket) %></td>
        <td>
          <% if logged_in? %>
            <%= link_to 'Edit', edit_ticket_path(ticket), class: 'btn btn-sm btn-secondary' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <hr/>
  <p>There are no tickets to display.</p>
<% end %>

