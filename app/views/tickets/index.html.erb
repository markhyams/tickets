<h4>Tickets</h4>

<% if @tickets.size > 0 %>
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Assignee</th>
      <th>Status</th>
      <th>Tags</th>
      <th></th>
    </tr>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.name, ticket_path(ticket) %></td>
        <td></td>
        <td><%= ticket.status %></td>
        <td></td>
        <td><%= link_to '[edit]', edit_ticket_path(ticket) %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>There are no tickets to display.</p>
<% end %>

<%= link_to 'New Ticket', new_ticket_path, class: 'btn btn-success' %>