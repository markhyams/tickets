<div class="container my-2">
  <form class="form-inline" action='/tickets' method='get'>
    <div class="form-group mx-2">
      <label class="mx-2">Project:</label>
      <%= select_tag(
          :project,
          options_for_select(@tickets.first.project_option_tags, selected=@params[:project]),
          include_blank: true,
          class: 'form-control-sm'
        )  
      %>
    </div>

    <div class="form-group mx-2">
      <label class="mx-2">Status:</label>
      <%= select_tag(
          :status,
          options_for_select(@tickets.first.class::ALLOWED_STATUS, select= @params[:status]),
          include_blank: true,
          class: 'form-control-sm'
        )  
      %>

    </div>

    <button type="submit" class="mx-2 btn btn-sm btn-outline-secondary">Search</button>
  </form>
</div>