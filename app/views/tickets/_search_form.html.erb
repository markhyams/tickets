<div class="container my-2">
  <form class="form-inline" action='/tickets' method='get'>
    <div class="form-group mx-2">
      <%= select_tag(
          :project,
          options_for_select(@tickets.klass.project_option_tags, selected=@params[:project]),
          include_blank: 'Choose project...',
          class: 'form-control-sm'
        )  
      %>
    </div>

    <div class="form-group mx-2">
      <%= select_tag(
          :status,
          options_for_select(@tickets.klass::ALLOWED_STATUS, select= @params[:status]),
          include_blank: 'Choose status...',
          class: 'form-control-sm'
        )  
      %>

    </div>

    <button type="submit" class="mx-2 btn btn-sm btn-outline-secondary">Search</button>
    <%= link_to 'Clear', tickets_path, class: "mx-2 btn btn-sm btn-outline-secondary" %>
  </form>
</div>