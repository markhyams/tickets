<%= render 'shared/errors', obj: @tag %>

<%= form_with model: @tag, local: true do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <%= f.submit(@tag.new_record? ? 'Create Tag' : 'Update Tag', class: 'btn btn-primary')%>
<% end %>


<% if !@tag.new_record? %>
  <%= render 'shared/delete_modal', obj: @tag %>
<% end %>
