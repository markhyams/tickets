<h4>Tags</h4>

<% if @tags.size > 0 %>
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Tickets</th>
      <th></th>
    </tr>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td>0</td>
        <td>
          <% if logged_in? %>
            <%= link_to 'Edit', edit_tag_path(tag), class: 'btn btn-sm btn-secondary' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <hr/>
  <p>There are no tags to display.</p>
<% end %>

<% if logged_in? %>
  <%= link_to 'New Tag', new_tag_path, class: 'btn btn-success' %>
<% end %>
